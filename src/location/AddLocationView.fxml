<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" stylesheets="@locationViewStyles.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.AddLocationViewController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Label prefHeight="50.0" prefWidth="500.0" text="Add Location" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox prefHeight="450.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Floor Number (FXXXX)">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></Label>
                  <TextField fx:id="fxFloorNo" promptText="Enter...">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></TextField>
                  <Label>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></Label>
                  <Label text="Room Number (RXXXX)">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></Label>
                  <TextField fx:id="fxRoomNo" promptText="Enter...">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></TextField>
                  <Label fx:id="fxStatus" prefWidth="500.0" styleClass="txtdanger">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="fxAddButton" mnemonicParsing="false" onAction="#addLocation" styleClass="fxbutton" text="Add">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
